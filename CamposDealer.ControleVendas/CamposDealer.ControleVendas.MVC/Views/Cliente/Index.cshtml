@model IEnumerable<CamposDealer.ControleVendas.Db.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4">Clientes</h1>
</div>

<div class="row justify-content-center">

    <div class="col-11 col-md-10 div-container">

        <div class="col-12 justify-content-end text-right">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
            <a class="btn btn-info" asp-controller="Cliente" asp-action="Create">Novo</a>
        </div>
        <div class="col-12 div-table">
            <table class="table table-striped" id="tableCliente">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Cidade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr data-idCliente="@cliente.Id"> 
                            <td class="td_nome">@cliente.Nome</td>
                            <td>@cliente.Cidade</td>
                            <td style="width: 80px;">
                                <i class="pointer-event" onclick='editarCliente(this)'><img class='iconedit' src='~/Icons/edit-2.svg' /></i>
                                <i class="cursor-pointer" onclick='excluirCliente(this)'><img class='icondelete' src='~/Icons/trash-2.svg' /></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>       
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modal_excluir">
  <div class="modal-dialog" role="document">
    <div class="modal-content">      
        
      <div class="modal-body" id="modal_body">
        
      </div>
      <div class="modal-footer">
          <input type="hidden" id="modal_ipt_id"/>
        <button type="button" class="btn btn-info" onclick="ConfirmarExclusao()">Sim</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
      </div>
    </div>
  </div>
</div>

<script src="~/js/Cliente/index.js"></script>