@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4">Cliente</h1>
</div>

<div class="row justify-content-center">

    <div class="col-11 col-md-10 div-container">

        <div class="col-12 justify-content-end text-right">
            <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
            <a class="btn btn-info" style="color:#fff" onclick="validation()">Salvar</a>
        </div>
        <div class="col-12 div-table">
            <div class="row">
                <div class="form-group col-12 col-md-6">
                    <label for="ipt_nome">Nome</label>
                    <input type="text" class="form-control ipt_required" id="ipt_nome" placeholder="Digite seu nome">
                    <small id="alert_nome"  class="form-text text-muted d-none span_alert">Campo Nome Obrigatório</small>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="ipt_cidade">Cidade</label>
                    <input type="text" class="form-control ipt_required" id="ipt_cidade" placeholder="Digite a cidade">
                    <small id="alert_cidade" class="form-text text-muted d-none span_alert">Campo Cidade Obrigatório</small>
                </div>
            </div>            
        </div>       
    </div>
</div>

<script src="~/js/Cliente/create.js"></script>